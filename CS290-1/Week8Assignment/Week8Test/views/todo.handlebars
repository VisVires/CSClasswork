<h1>Hello {{name}} Here is your To Do List!</h1>
<h2>You have {{cityCount}} items on your to do list.</h2>
<form method="post">
  <label for="name">To Do Item: </label>
  <input type="text" name="name" id="toDoName">
  <label for="City">City: </label>
  <input type="text" name="city" id="cityName">
  <input type="submit" name="Add Item" value="Add Item">
</form>
{{#if todo}}
<ul>
  {{#each todo}}
  <li>
    <h3 class="{{this.id}}">Name: {{this.name}} City: {{this.city}} Temperature: {{this.temp}}
    </h3>
    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" name="Done" value="Mark as Done">
    </form>
  </li>
  {{/each}}
</ul>
{{/if}}